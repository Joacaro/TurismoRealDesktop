<Window x:Class="TurismoReal.Vistas.CrearInventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurismoReal.Vistas"
        mc:Ignorable="d"
        Title="CrearInventario" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/2.jpg" Opacity="0.6"/>
        </Grid.Background>
        <Label Content="Inventario" HorizontalAlignment="Left" Margin="280,46,0,0" VerticalAlignment="Top" Width="213"/>
        <TextBox x:Name="txtName"  HorizontalAlignment="Left" Margin="95,102,0,0" TextWrapping="Wrap" Text="Nombre_Item" VerticalAlignment="Top" Width="211" Height="35"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Margin="95,173,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" Width="211" Height="33"/>
        <ComboBox x:Name="cmbTipo" HorizontalAlignment="Left" Margin="95,257,0,0" VerticalAlignment="Top" Width="211"/>
        <Button Content="Crear" HorizontalAlignment="Left" Margin="306,332,0,0" VerticalAlignment="Top" Height="30" Width="167" Click="Button_Click"/>
    </Grid>
</Window>
