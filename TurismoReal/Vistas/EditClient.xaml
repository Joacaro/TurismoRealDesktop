<Window x:Class="TurismoReal.Vistas.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurismoReal.Vistas"
        mc:Ignorable="d"
        Title="EditClient" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/2.jpg" Opacity="0.6"/>
        </Grid.Background>
        <TextBox x:Name="nombre" HorizontalAlignment="Left" Margin="89,133,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="149" Height="30"/>
        <TextBox x:Name="apellido" HorizontalAlignment="Left" Margin="89,187,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="149" Height="30"/>
        <Button Content="Editar" HorizontalAlignment="Left" Margin="164,247,0,0" VerticalAlignment="Top"  Height="48" Width="190" Click="Button_Click"  />
    </Grid>
</Window>
